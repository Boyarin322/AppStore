@{
    ViewData["Title"] = "Register";
}

<body class="log-body">
    <div class="box log-box">
        <div class="container log-container">
            <div class="top">
                <spsan class="log-span">Have an account?<a asp-controller="Account" asp-action="Logger">Log in</a></spsan>
                <header class="log-header">Register</header>
            </div>
            <div class="input-field my-3">
                <i class='fa fa-solid fa-user i-log'></i>
                <input type="text" class="input" placeholder="Username" id="">
            </div>
            <div class="input-field mb-3">
                <i class='fa fa-solid fa-envelope i-log'></i>
                <input type="email" class="input" placeholder="Email" id="">
            </div>
            <div class="input-field">
                <i class='fa fa-solid fa-lock i-log'></i>
                <input type="Password" class="input" placeholder="Password" id="">
            </div>
            <div class="input-field my-3">
                <i class='fa fa-solid fa-lock i-log'></i>
                <input type="password" class="input" placeholder="Confirm password" id="">
            </div>
            <div class="input-field my-3">
                <input type="submit" class="submit" value="Register" id="">
            </div>
       
        </div>
    </div>
</body>
