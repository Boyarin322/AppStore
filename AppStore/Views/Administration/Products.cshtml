@model IEnumerable<AppStore.Models.ViewModels.GetProductsViewModel>
@{
    ViewData["Title"] = "Products";
}
<body class="log-body">
    <div class="row">
        <div class="col-12">
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                <table class="table table-dark table-striped table-hover my-3">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Productname</th>
                            <th scope="col">Price</th>
                            <th scope="col">Description</th>
                            <th scope="col">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td scope="col">@product.Id</td>
                                <td scope="col">@product.Productname</td>
                                <td scope="col">@product.Price</td>
                                <td scope="col">@product.Description</td>
                                    <td>
                                        <form asp-action="DeleteProduct" asp-controller="Administration" asp-route-id="@product.Id" method="post">
                                            <button class="btn btn-sm btn-danger" type="submit">
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</body>