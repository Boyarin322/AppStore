<!--Take products from storage(cookies or db)-->
@model IEnumerable<AppStore.Models.Product>

@{
    ViewData["Title"] = "Cart";
}
<div class="container">
    <h1>Shopping Cart</h1>
    <div class="row">
        <div class="col-12">
            <table class="table table-dark table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Description</th>
                    </tr>
                </thead>
                @{
                    decimal summary = 0;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Photo" alt="Product Image" class="img-thumbnail">
                        </td>
                        <td>@item.Productname</td>
                        <td>@item.Price.ToString("c")</td>
                        <td>@item.Description</td>
                    </tr>
                    summary += item.Price;
                }
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-right"><strong>Total:</strong></td>
                            <td>@summary.ToString("c")</td>
                        </tr>
                    </tfoot>
                </table>
                <a href="#" class="btn btn-primary float-right">Checkout</a>
            </div>
        </div>
    </div>
